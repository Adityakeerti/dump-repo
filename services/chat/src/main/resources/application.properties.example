#spring.application.name=chat
spring.application.name=college-chat
server.port=8083
server.address=0.0.0.0

# MySQL Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/connect_college?createDatabaseIfNotExist=false
spring.datasource.username=root
spring.datasource.password=YOUR_MYSQL_PASSWORD_HERE
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# JPA Configuration - Validating schema only, not creating
spring.jpa.hibernate.ddl-auto=none
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect
